#!/usr/bin/env bash

help(){
    cat<<__EOF__
    usage:  m open

    Examples:
      m open "http://google.com"                   # opens a website
      m open /Volumes/Archive/Documents/file.txt   # opens a file
      m open /Applications/Messages.app            # opens an application
__EOF__
}

case $1 in
    help)
        help
        ;;
    *)
        open "$@"
        ;;
esac

